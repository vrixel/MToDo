@model Mosaic_Todo.Models.ToDo

@using (Html.BeginForm("Create", "ToDoes")) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-inline">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control input-lg" } })
        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

        <input type="submit" value="Add Task" class="btn btn-primary btn-lg" />
 
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
